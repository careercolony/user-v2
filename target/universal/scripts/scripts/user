#!/bin/sh

realpath () {
(
  TARGET_FILE="$1"

  cd "$(dirname "$TARGET_FILE")"
  TARGET_FILE=$(basename "$TARGET_FILE")

  COUNT=0
  while [ -L "$TARGET_FILE" -a $COUNT -lt 100 ]
  do
      TARGET_FILE=$(readlink "$TARGET_FILE")
      cd "$(dirname "$TARGET_FILE")"
      TARGET_FILE=$(basename "$TARGET_FILE")
      COUNT=$(($COUNT + 1))
  done

  if [ "$TARGET_FILE" = "." -o "$TARGET_FILE" = ".." ]; then
    cd "$TARGET_FILE"
    TARGET_FILEPATH=
  else
    TARGET_FILEPATH=/$TARGET_FILE
  fi

  echo "$(pwd -P)/$TARGET_FILE"
)
}

# Allow user and template_declares (see below) to add java options.
addJava () {
  java_opts="$java_opts $1"
}

# Allow user to specify java options. These get listed first per bash-template.
if [ -n "$JAVA_OPTS" ]
then
  addJava "$JAVA_OPTS"
fi

# Loads a configuration file full of default command line options for this script.
loadConfigFile() {
  cat "$1" | sed '/^\#/d' | sed 's/^-J-X/-X/' | tr '\r\n' ' '
}


real_script_path="$(realpath "$0")"
app_home="$(realpath "$(dirname "$real_script_path")")"
lib_dir="$(realpath "${app_home}/../lib")"

app_mainclass="com.mj.users.Server"

script_conf_file="${app_home}/../conf/application.ini"
app_classpath="$lib_dir/user.user-0.0.1.jar:$lib_dir/org.scala-lang.scala-library-2.11.8.jar:$lib_dir/com.typesafe.akka.akka-actor_2.11-2.5.16.jar:$lib_dir/com.typesafe.config-1.3.3.jar:$lib_dir/org.scala-lang.modules.scala-java8-compat_2.11-0.7.0.jar:$lib_dir/com.typesafe.akka.akka-cluster_2.11-2.5.16.jar:$lib_dir/com.typesafe.akka.akka-remote_2.11-2.5.16.jar:$lib_dir/com.typesafe.akka.akka-stream_2.11-2.5.16.jar:$lib_dir/com.typesafe.akka.akka-protobuf_2.11-2.5.16.jar:$lib_dir/org.reactivestreams.reactive-streams-1.0.2.jar:$lib_dir/com.typesafe.ssl-config-core_2.11-0.2.4.jar:$lib_dir/org.scala-lang.modules.scala-parser-combinators_2.11-1.1.1.jar:$lib_dir/io.netty.netty-3.10.6.Final.jar:$lib_dir/io.aeron.aeron-driver-1.9.3.jar:$lib_dir/io.aeron.aeron-client-1.9.3.jar:$lib_dir/org.agrona.agrona-0.9.18.jar:$lib_dir/com.typesafe.akka.akka-cluster-tools_2.11-2.5.16.jar:$lib_dir/com.typesafe.akka.akka-http_2.11-10.1.5.jar:$lib_dir/com.typesafe.akka.akka-http-core_2.11-10.1.5.jar:$lib_dir/com.typesafe.akka.akka-parsing_2.11-10.1.5.jar:$lib_dir/com.typesafe.akka.akka-http-spray-json-experimental_2.11-2.4.11.2.jar:$lib_dir/com.typesafe.akka.akka-http-experimental_2.11-2.4.11.2.jar:$lib_dir/io.spray.spray-json_2.11-1.3.2.jar:$lib_dir/com.typesafe.play.play-json_2.11-2.5.15.jar:$lib_dir/com.typesafe.play.play-functional_2.11-2.5.15.jar:$lib_dir/com.typesafe.play.play-datacommons_2.11-2.5.15.jar:$lib_dir/joda-time.joda-time-2.9.6.jar:$lib_dir/org.joda.joda-convert-1.8.1.jar:$lib_dir/org.scala-lang.scala-reflect-2.11.8.jar:$lib_dir/com.fasterxml.jackson.datatype.jackson-datatype-jdk8-2.7.8.jar:$lib_dir/com.fasterxml.jackson.datatype.jackson-datatype-jsr310-2.7.8.jar:$lib_dir/org.slf4j.slf4j-simple-1.7.25.jar:$lib_dir/org.slf4j.slf4j-api-1.7.25.jar:$lib_dir/com.sksamuel.scrimage.scrimage-core_2.11-2.1.8.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-core-3.2.1.jar:$lib_dir/com.twelvemonkeys.common.common-lang-3.2.1.jar:$lib_dir/com.twelvemonkeys.common.common-io-3.2.1.jar:$lib_dir/com.twelvemonkeys.common.common-image-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-jpeg-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-metadata-3.2.1.jar:$lib_dir/com.drewnoakes.metadata-extractor-2.8.1.jar:$lib_dir/com.adobe.xmp.xmpcore-5.1.2.jar:$lib_dir/commons-io.commons-io-2.4.jar:$lib_dir/ar.com.hjg.pngj-2.1.0.jar:$lib_dir/com.sksamuel.scrimage.scrimage-io-extra_2.11-2.1.8.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-bmp-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-icns-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-iff-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-pcx-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-pict-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-pdf-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-pnm-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-psd-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-sgi-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-tiff-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-tga-3.2.1.jar:$lib_dir/com.twelvemonkeys.imageio.imageio-thumbsdb-3.2.1.jar:$lib_dir/com.esotericsoftware.kryo-4.0.0.jar:$lib_dir/com.esotericsoftware.reflectasm-1.11.3.jar:$lib_dir/org.ow2.asm.asm-5.0.4.jar:$lib_dir/com.esotericsoftware.minlog-1.3.0.jar:$lib_dir/org.objenesis.objenesis-2.2.jar:$lib_dir/com.github.romix.akka.akka-kryo-serialization_2.11-0.5.0.jar:$lib_dir/net.jpountz.lz4.lz4-1.3.0.jar:$lib_dir/commons-cli.commons-cli-1.4.jar:$lib_dir/io.jsonwebtoken.jjwt-0.7.0.jar:$lib_dir/com.fasterxml.jackson.core.jackson-databind-2.8.2.jar:$lib_dir/com.fasterxml.jackson.core.jackson-annotations-2.8.0.jar:$lib_dir/com.fasterxml.jackson.core.jackson-core-2.8.2.jar:$lib_dir/org.reactivemongo.reactivemongo_2.11-0.12.7.jar:$lib_dir/org.reactivemongo.reactivemongo-bson-macros_2.11-0.12.7.jar:$lib_dir/org.reactivemongo.reactivemongo-bson_2.11-0.12.7.jar:$lib_dir/org.reactivemongo.reactivemongo-shaded-0.12.7.jar:$lib_dir/com.typesafe.play.play-iteratees_2.11-2.6.1.jar:$lib_dir/org.scala-stm.scala-stm_2.11-0.8.jar:$lib_dir/commons-codec.commons-codec-1.10.jar:$lib_dir/org.apache.logging.log4j.log4j-api-2.5.jar:$lib_dir/org.reactivemongo.reactivemongo-play-json_2.11-0.12.7-play26.jar:$lib_dir/com.jason-goodwin.authentikat-jwt_2.11-0.4.1.jar:$lib_dir/org.json4s.json4s-native_2.11-3.2.10.jar:$lib_dir/org.json4s.json4s-core_2.11-3.2.10.jar:$lib_dir/org.json4s.json4s-ast_2.11-3.2.10.jar:$lib_dir/com.thoughtworks.paranamer.paranamer-2.6.jar:$lib_dir/org.scala-lang.scalap-2.11.8.jar:$lib_dir/org.scala-lang.scala-compiler-2.11.8.jar:$lib_dir/org.scala-lang.modules.scala-xml_2.11-1.0.4.jar:$lib_dir/org.json4s.json4s-jackson_2.11-3.2.10.jar:$lib_dir/org.scalaj.scalaj-http_2.11-2.3.0.jar:$lib_dir/org.neo4j.driver.neo4j-java-driver-1.0.4.jar:$lib_dir/com.typesafe.akka.akka-stream-kafka_2.11-0.11-M2.jar:$lib_dir/org.apache.kafka.kafka-clients-0.9.0.1.jar:$lib_dir/org.xerial.snappy.snappy-java-1.1.1.7.jar"


# If a configuration file exist, read the contents to $opts
[ -f "$script_conf_file" ] && opts=$(loadConfigFile "$script_conf_file")

exec java $java_opts -classpath $app_classpath $opts $app_mainclass $@
